<%= stylesheet_link_tag "tree_show_page" %>

<div style="background: linear-gradient(to right, #1e90ff, #87ceeb); min-height: 100vh; padding: 50px 0;">
  <div class="container my-3">
  <h1 class="text-center mb-4 text-white">Tree Details</h1>

  <div class="row justify-content-center">
    <div class="col-md-6 mb-4">
      <div class="text-center p-4 rounded shadow-lg" style="background: #ffffff; border-radius: 15px;">
        <%= render @tree %>
       </div>

      <% if user_signed_in? && current_user.id == @tree.user_id %>
        <div class="mt-4 d-flex justify-content-center">
          <%= link_to "Edit this Tree", edit_tree_path(@tree), class: "btn btn-warning" %>
          <%= button_to "Destroy this Tree", @tree, method: :delete, class: "btn btn-danger ms-3", data: { confirm: "Are you sure you want to delete this tree?" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>