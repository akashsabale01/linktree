<p style="color: green"><%= notice %></p>

<div class="container my-3">
  <h1 class="text-center mb-4">Tree Details</h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= render @tree %>  <!-- This will render the _tree.html.erb partial -->
      
      <div class="mt-4 text-center">
        <%= link_to "Edit this tree", edit_tree_path(@tree), class: "btn btn-warning mx-2" %>
        <%= link_to "Back to Trees", trees_path, class: "btn btn-secondary mx-2" %>

        <%= button_to "Destroy this tree", @tree, method: :delete, class: "btn btn-danger mt-3 mx-2", data: { confirm: "Are you sure you want to delete this tree?" } %>
      </div>
    </div>
  </div>
</div>
