<p style="color: green"><%= notice %></p>

<div class="container my-5 shadow-lg rounded pb-3">
  <h1 class="text-center mb-4">Edit Tree</h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= render "form", tree: @tree %> <!-- This will render the _form.html.erb partial -->

      <div class="mt-4 text-center">
        <%= link_to "Show this tree", @tree, class: "btn btn-info mx-2 shadow-sm" %>
        <%= link_to "Back to Trees", trees_path, class: "btn btn-secondary mx-2 shadow-sm" %>
      </div>
    </div>
  </div>
</div>
